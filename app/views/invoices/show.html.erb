<%- model_class = Invoice -%>
<div class="page-header">
  <h1><%=t '.title', :default => Invoice %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:order_refs) %></dt>
      <dd><pre class="prettyprint"><%= @invoice.order_refs %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:total_cost) %></dt>
      <dd><pre class="prettyprint"><%= @invoice.total_cost %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:invoice_number) %></dt>
      <dd><pre class="prettyprint"><%= @invoice.invoice_number %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:date_issued) %></dt>
      <dd><pre class="prettyprint"><%= @invoice.date_issued %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:date_due) %></dt>
      <dd><pre class="prettyprint"><%= @invoice.date_due %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:status) %></dt>
      <dd><pre class="prettyprint"><%= @invoice.status %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:tax) %></dt>
      <dd><pre class="prettyprint"><%= @invoice.tax %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:sent) %></dt>
      <dd><pre class="prettyprint"><%= @invoice.sent %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:manual) %></dt>
      <dd><pre class="prettyprint"><%= @invoice.manual %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:purchase_order_number) %></dt>
      <dd><pre class="prettyprint"><%= @invoice.purchase_order_number %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:comment) %></dt>
      <dd><pre class="prettyprint"><%= @invoice.comment %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:type) %></dt>
      <dd><pre class="prettyprint"><%= @invoice.type %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              invoices_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_invoice_path(@invoice), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              invoice_path(@invoice),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

