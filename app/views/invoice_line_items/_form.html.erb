<%= simple_form_for(@invoice_line_item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :tax %>
    <%= f.association :invoice %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
