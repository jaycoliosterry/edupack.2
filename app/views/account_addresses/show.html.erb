<%- model_class = AccountAddress -%>
<div class="page-header">
  <h1><%=t '.title', :default => AccountAddress %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address1) %></dt>
      <dd><pre class="prettyprint"><%= @account_address.address1 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address2) %></dt>
      <dd><pre class="prettyprint"><%= @account_address.address2 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address3) %></dt>
      <dd><pre class="prettyprint"><%= @account_address.address3 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address4) %></dt>
      <dd><pre class="prettyprint"><%= @account_address.address4 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:country) %></dt>
      <dd><pre class="prettyprint"><%= @account_address.country %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:postcode) %></dt>
      <dd><pre class="prettyprint"><%= @account_address.postcode %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @account_address.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:email) %></dt>
      <dd><pre class="prettyprint"><%= @account_address.email %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:telephone) %></dt>
      <dd><pre class="prettyprint"><%= @account_address.telephone %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              account_addresses_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_account_address_path(@account_address), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              account_address_path(@account_address),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

