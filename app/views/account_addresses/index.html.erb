<%- model_class = AccountAddress -%>
<div class="page-header">
  <h1><%=t '.title', :default => AccountAddress %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:address1) %></th>
      <th><%= model_class.human_attribute_name(:address2) %></th>
      <th><%= model_class.human_attribute_name(:address3) %></th>
      <th><%= model_class.human_attribute_name(:address4) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <th><%= model_class.human_attribute_name(:postcode) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:telephone) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @account_addresses.each do |account_address| %>
      <tr>
        <td><%= account_address.id %></td>
        <td><%= account_address.address1 %></td>
        <td><%= account_address.address2 %></td>
        <td><%= account_address.address3 %></td>
        <td><%= account_address.address4 %></td>
        <td><%= account_address.country %></td>
        <td><%= account_address.postcode %></td>
        <td><%= account_address.name %></td>
        <td><%= account_address.email %></td>
        <td><%= account_address.telephone %></td>
        <td><%=l account_address.created_at, format: :long %></td>
        <td>
          <%= link_to account_address_path(account_address), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to account_address_path(account_address), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_account_address_path,
            :class => 'btn btn-primary' %>
