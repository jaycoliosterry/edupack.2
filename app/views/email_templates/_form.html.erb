<%= simple_form_for(@email_template) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :reply_to_email %>
    <%= f.input :subject %>
    <%= f.input :body %>
    <%= f.input :css %>
    <%= f.association :account %>
    <%= f.association :order %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
