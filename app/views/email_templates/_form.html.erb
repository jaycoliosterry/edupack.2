<%= form_for @email_template, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :reply_to_email, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :reply_to_email, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :subject, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :subject, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :body, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :css, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :css, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  email_templates_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
