<%- model_class = Address -%>
<div class="page-header">
  <h1><%=t '.title', :default => Address %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:company_name) %></dt>
      <dd><pre class="prettyprint"><%= @address.company_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:contact_name) %></dt>
      <dd><pre class="prettyprint"><%= @address.contact_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:job_title) %></dt>
      <dd><pre class="prettyprint"><%= @address.job_title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:department) %></dt>
      <dd><pre class="prettyprint"><%= @address.department %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:telephone) %></dt>
      <dd><pre class="prettyprint"><%= @address.telephone %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:fax) %></dt>
      <dd><pre class="prettyprint"><%= @address.fax %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:email) %></dt>
      <dd><pre class="prettyprint"><%= @address.email %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:street1) %></dt>
      <dd><pre class="prettyprint"><%= @address.street1 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:street2) %></dt>
      <dd><pre class="prettyprint"><%= @address.street2 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:city) %></dt>
      <dd><pre class="prettyprint"><%= @address.city %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:state) %></dt>
      <dd><pre class="prettyprint"><%= @address.state %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:country) %></dt>
      <dd><pre class="prettyprint"><%= @address.country %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:zip) %></dt>
      <dd><pre class="prettyprint"><%= @address.zip %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              addresses_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_address_path(@address), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              address_path(@address),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

