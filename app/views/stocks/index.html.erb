<h1>Listing stocks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Stock level</th>
      <th>Storage location</th>
      <th>Weight</th>
      <th>Width</th>
      <th>Length</th>
      <th>Depth</th>
      <th>Stock group</th>
      <th>Account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.name %></td>
        <td><%= stock.description %></td>
        <td><%= stock.stock_level %></td>
        <td><%= stock.storage_location %></td>
        <td><%= stock.weight %></td>
        <td><%= stock.width %></td>
        <td><%= stock.length %></td>
        <td><%= stock.depth %></td>
        <td><%= stock.stock_group %></td>
        <td><%= stock.account %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

