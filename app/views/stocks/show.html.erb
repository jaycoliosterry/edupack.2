<%- model_class = Stock -%>
<div class="page-header">
  <h1><%=t '.title', :default => Stock %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @stock.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @stock.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:stock_level) %></dt>
      <dd><pre class="prettyprint"><%= @stock.stock_level %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:storage_location) %></dt>
      <dd><pre class="prettyprint"><%= @stock.storage_location %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:weight) %></dt>
      <dd><pre class="prettyprint"><%= @stock.weight %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:width) %></dt>
      <dd><pre class="prettyprint"><%= @stock.width %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:length) %></dt>
      <dd><pre class="prettyprint"><%= @stock.length %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:depth) %></dt>
      <dd><pre class="prettyprint"><%= @stock.depth %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              stocks_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_stock_path(@stock), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              stock_path(@stock),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

