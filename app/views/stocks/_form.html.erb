<%= simple_form_for(@stock) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :stock_level %>
    <%= f.input :storage_location %>
    <%= f.input :weight %>
    <%= f.input :width %>
    <%= f.input :length %>
    <%= f.input :depth %>
    <%= f.association :stock_group %>
    <%= f.association :account %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
