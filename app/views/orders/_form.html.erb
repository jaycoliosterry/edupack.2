<%= form_for @order, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :error, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :error, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :description, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :total_cost, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :total_cost, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tax, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :tax, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cost, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :cost, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :type, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :type, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :notify_me, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :notify_me, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :notify_receiver, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :notify_receiver, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :deliver_by, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :deliver_by, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :batch, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :batch, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :status, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :service, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :service, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  orders_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
