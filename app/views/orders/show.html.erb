<%- model_class = Order -%>
<div class="page-header">
  <h1><%=t '.title', :default => Order %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:error) %></dt>
      <dd><pre class="prettyprint"><%= @order.error %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @order.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:total_cost) %></dt>
      <dd><pre class="prettyprint"><%= @order.total_cost %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:tax) %></dt>
      <dd><pre class="prettyprint"><%= @order.tax %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:cost) %></dt>
      <dd><pre class="prettyprint"><%= @order.cost %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:type) %></dt>
      <dd><pre class="prettyprint"><%= @order.type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:notify_me) %></dt>
      <dd><pre class="prettyprint"><%= @order.notify_me %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:notify_receiver) %></dt>
      <dd><pre class="prettyprint"><%= @order.notify_receiver %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:deliver_by) %></dt>
      <dd><pre class="prettyprint"><%= @order.deliver_by %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:batch) %></dt>
      <dd><pre class="prettyprint"><%= @order.batch %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:status) %></dt>
      <dd><pre class="prettyprint"><%= @order.status %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:service) %></dt>
      <dd><pre class="prettyprint"><%= @order.service %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              orders_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_order_path(@order), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              order_path(@order),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

